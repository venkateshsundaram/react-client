{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmitOnError": true
  },
  "include": [
    "src/cli/**/*",
    "src/server/**/*",
    "src/utils/**/*",
    "src/types/**/*",
    "src/config.ts"
  ],
  "exclude": ["node_modules", "dist", "templates", "src/__tests__"]
}
