{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "src",
    "outDir": "dist",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/cli/**/*",
    "src/server/**/*",
    "src/utils/**/*",
    "src/types/**/*",
    "src/config.ts"
  ]
}
