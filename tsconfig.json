{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": false,
    /* Compatibility */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    /* Environment */
    "types": [
      "node"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
    /* Features */
    "moduleDetection": "force"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}